@page "/"
@using Volo.Abp.MultiTenancy
@inherits UdesAPPComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Index</PageTitle>

<div class="container">
    <div class="p-5 text-center">
        <Badge Color="Color.Success" class="mb-4">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> <strong>UdesAPP</strong>'e Hoşgeldiniz.</h5>
        </Badge>

        <h1>Udes Application Alpha Version</h1>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a class="btn btn-primary" href="Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }

        <div class="col-md-auto text-center">
            <img src="..\images\logo\udes\index-img.png" style="max-width: 400px;" class="w-100 mb-5 my-md-3">
        </div>
    </div>
</div>